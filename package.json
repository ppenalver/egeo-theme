{
  "name": "ui-fonts",
  "version": "",
  "license": "Apache-2.0",
  "description": "UI-Fonts library",
  "sasslintConfig": ".sass-lint.yml",
  "scripts": {
    "replace": "json -I -f package.json -e",
    "build": "rimraf egeo-theme-stratio.css && node-sass --include-path scss src/index.scss egeo-theme-stratio.css && postcss --use autoprefixer *.css -d . && cleancss --source-map --output egeo-theme-stratio.min.css egeo-theme-stratio.css",
    "test": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v -q",
    "clean:dist": "rimraf egeo-theme-stratio.css"
  },
  "author": "Stratio",
  "repository": {
    "type": "git",
    "url": "https://github.com/Stratio/ui-fonts"
  },
  "devDependencies": {
    "autoprefixer": "6.5.1",
    "clean-css": "3.4.20",
    "json": "9.0.4",
    "node-sass": "4.3.0",
    "postcss-cli": "2.6.0",
    "rimraf": "2.5.4",
    "sass-lint": "1.10.2",
    "ui-base": "0.2.0-SNAPSHOT"
  }
}
